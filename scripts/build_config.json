{
    "build_system_config": {
        "version": "1.0.0",
        "description": "Modern Build System Configuration",
        "advanced_features": {
            "enable_build_cache": {
                "enabled": true,
                "description": "Enable vcpkg binary cache for faster builds",
                "auto_detect": true,
                "fallback_on_error": true
            },
            "enable_ninja_auto_selection": {
                "enabled": true,
                "description": "Automatically select Ninja generator when available",
                "requires": [
                    "ninja",
                    "vs_environment"
                ],
                "fallback": "visual_studio"
            },
            "enable_build_diagnostics": {
                "enabled": true,
                "description": "Enable build performance monitoring and diagnostics",
                "log_file": "logs/build_diagnostics.log",
                "performance_tracking": true
            },
            "enable_preset_detection": {
                "enabled": true,
                "description": "Automatically detect and use CMakePresets.json",
                "fallback": "manual_configuration"
            },
            "enable_incremental_optimization": {
                "enabled": true,
                "description": "Optimize incremental builds with state tracking",
                "cache_build_signatures": true,
                "detect_identical_builds": true
            },
            "enable_environment_detection": {
                "enabled": true,
                "description": "Detect IDE environments and adjust behavior",
                "supported_ides": [
                    "vscode",
                    "kiro_ide",
                    "visual_studio"
                ],
                "auto_disable_cache_in_ide": true
            }
        },
        "compatibility_mode": {
            "legacy_command_support": true,
            "preserve_existing_behavior": true,
            "graceful_degradation": true
        },
        "performance_settings": {
            "parallel_builds": "auto",
            "memory_limit": "auto",
            "cache_cleanup_threshold": "1GB"
        }
    }
}